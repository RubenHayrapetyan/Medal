<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <corners android:radius="12dp" />

            <gradient
                android:startColor="@color/colorDarkGrey"
                android:centerColor="@color/colorDarkGrey"
                android:endColor="@color/colorDarkGrey"
                android:angle="-90"/>
            <stroke
                android:width="0dp"
                android:color="#5A5959" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="8dp"
                />
            <gradient
                android:startColor="@color/colorGrey"
                android:centerColor="@color/colorGrey"
                android:endColor="@color/colorGrey"
                android:angle="90"/>

            <stroke
                android:width="0dp"
                android:color="#FFFFFF"
                />
        </shape>

    </item>

</selector>